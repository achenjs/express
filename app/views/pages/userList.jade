extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 用户名
                        th 昵称
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in userlist
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{item.nickname}
                            td
                                a(target="_blank", href="/movie/#{item._id}") 查看
                            td
                                a(target="_blank", href="/admin/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
    script(src="/libs/axios/dist/axios.min.js")
    script(src="/js/admin.js")