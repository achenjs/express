extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post", action="/admin/category/new")
                input(type="hidden", name="category[_id]", value="#{category._id}")
                .form-group
                    label.col-sm-3.control-label(for="inputName") 类别名称
                    .col-sm-10
                        input#inputName.form-control(type="text", name="category[name]", value="#{category.name}", autocomplete="off")
                .form-group
                    .col-sm-10
                        input.btn.btn-primary(type="submit" value="录入")
